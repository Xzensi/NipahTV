{
	"manifest_version": 2,
	"name": "NipahTV",
	"description": "A Better Kick and 7TV Emote Integration for Kick.",
	"version": "{{VERSION}}",
	"icons": {
		"48": "assets/img/icons/border-48.png"
	},
	"permissions": [],
	"content_scripts": [
		{
			"matches": ["https://kick.com/*"],
			"js": [
				"vendor/jquery.min.js",
				"vendor/dexie.min.js",
				"vendor/fuse.min.js",
				"vendor/twemoji.min.js",
				"index.js"
			],
			"css": ["style.min.css"]
		}
	],
	"web_accessible_resources": ["assets/*.png", "assets/btn/*.png"],
	"browser_specific_settings": {
		"gecko": {
			"id": "{69696969-6969-6969-6969-696969696969}"
		}
	}
}

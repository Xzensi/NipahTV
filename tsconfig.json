{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"noEmit": true,
		// "skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			// "~/*": ["*"],
			"@core/*": ["Core/*"],
			"@database/*": ["Database/*"],
			"@extensions/*": ["Extensions/*"],
			"@sites/*": ["Sites/*"]
		}
	},
	"typeRoots": ["node_modules/@types", "node_modules/dexie"],
	"include": ["src/**/*"]
}
